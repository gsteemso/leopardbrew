#!/bin/bash
cdP() { cd "$@" >/dev/null && pwd -P ; }

BREW_FILE_DIRECTORY="$(cdP "${0%/*}")"
HOMEBREW_BREW_FILE="$BREW_FILE_DIRECTORY/${0##*/}"
test -L "$HOMEBREW_BREW_FILE" && \
    BREW_FILE_DIRECTORY="$(cdP "$(dirname "$(readlink "$HOMEBREW_BREW_FILE")")")"

HOMEBREW_PREFIX="$(cdP "${HOMEBREW_BREW_FILE%/*/*}")"
HOMEBREW_REPOSITORY="$(cdP "$BREW_FILE_DIRECTORY/..")"
HOMEBREW_LIBRARY="$(cdP "$HOMEBREW_REPOSITORY/Library")"

source "$HOMEBREW_LIBRARY/brew.sh"
